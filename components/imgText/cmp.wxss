.container{
	width: 100%;
	display: flex;
	justify-content: space-between;
}

.title-box{
	margin-left: 10rpx;
	/* 后面可能会更改 */
	width: 450rpx;
}
.main-title{
	display: block;
	letter-spacing: 3rpx;
	color: #333;
	font-size: 46rpx;
	font-weight: 300;
	line-height: 50rpx;
}
.sub-head{
	color: #999;
	font-size: 30rpx;
	letter-spacing: 3rpx;
	margin-bottom:20rpx;
}
.img-box{
	margin-right: 20rpx;
	width: 200rpx;
	height: 200rpx;
}
.image{
	width: 100%;
	height: 100%;
}
